{
  "name": "react-router-scroll-to-top",
  "version": "1.0.0",
  "description": "React component that scrolls to the top of a page when the current location gets changed",
  "repository": {
    "type": "git",
    "url": "git://github.com/dimazuien/react-router-scroll-to-top.git"
  },
  "homepage": "https://github.com/dimazuien/react-router-scroll-to-top#readme",
  "keywords": [
    "react",
    "react router",
    "scroll restoration",
